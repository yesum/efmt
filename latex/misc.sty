% Formatações disponibilizadas.

% Formatação para colocação de aspas.
\newcommand{\aspas}[1]{``#1''}

% Formatação para destaque (enfatização) de texto.
\newcommand{\dest}[1]{\emph{#1}}

% Legenda (capitulação) e referência.
\newcommand{\legendaref}[2]{\caption{#1\label{#2}}}

% Formatações das referências.
\newrefformat{cha}{Cap\'itulo~\ref{#1}}
\newrefformat{fig}{Figura~\ref{#1}}
\newrefformat{sec}{seç\~ao~\ref{#1}}
\newrefformat{equ}{(\ref{#1})}
\newrefformat{tab}{tabela~\ref{#1}}
\newrefformat{enu}{\ref{#1}}

