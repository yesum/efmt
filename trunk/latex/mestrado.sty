% Comandos e ambientes para inclusão e identificação de figuras e tabelas.

% Inclusão geral de figura.
\newcommand{\figura}[3]{%
    \begin{figure}[!htbp]
        \centering
        \includegraphics{figuras/#3}
        \legendaref{#1}{#2}
    \end{figure}
}

% Inclusão geral de figura com redimensionamento da largura.
\newcommand{\figuraredim}[3]{%
    \begin{figure}[!htbp]
        \centering
        \includegraphics[width = 14cm]{figuras/#3}
        \legendaref{#1}{#2}
    \end{figure}
}

% Inclusão geral de figura com redimensionamento variável da largura.
\newcommand{\figuraredimvar}[4]{%
    \begin{figure}[!htbp]
        \centering
        \includegraphics[width = #1]{figuras/#4}
        \legendaref{#2}{#3}
    \end{figure}
}

% Inclusão geral de figura com redimensionamento versão 2.
\newcommand{\figuraredimdois}[3]{%
    \begin{figure}[!htbp]
        \centering
        \includegraphics[width = 14cm, height = 10cm]{figuras/#3}
        \legendaref{#1}{#2}
    \end{figure}
}

% Inclusão geral de figura com redimensionamento variável versão 2.
\newcommand{\figuraredimdoisvar}[5]{%
    \begin{figure}[!htbp]
        \centering
        \includegraphics[width = #1, height = #2]{figuras/#5}
        \legendaref{#3}{#4}
    \end{figure}
}

% Inclusão geral de figura com redimensionamento versão 3.
\newcommand{\figuraredimtres}[3]{%
    \begin{figure}[!htbp]
        \centering
        \includegraphics[width = 7cm, height = 7cm]{figuras/#3}
        \legendaref{#1}{#2}
    \end{figure}
}

% Inclusão de diagramas de Nassi-Schneiderman.
%   ('\caption' e '\label' deverão ser utilizados no corpo do ambiente, após a
%   estrutura.)
\newenvironment{dns}
{%
    \begin{figure}[!htbp]
        \centering
        \scriptsize
}
{%
    \end{figure}
    \normalsize
}

% Inclusão geral de tabela.
\newenvironment{tabela}[2]{\begin{table}[!htbp]\small\singlespacing\centering \legendaref{#1}{#2} \bigskip}{\doublespacing\normalsize\end{table}}
                                
